<Page x:Class="JobSeekerApp.Views.FinishView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="FinishView">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Registration is successful!" FontSize="24" Margin="10" TextAlignment="Center"/>
            <TextBlock Text="Thank you for registering.You can close the program" 
                       FontSize="16" Margin="10" TextAlignment="Center"/>
            <Button Content="Close program" Width="200" Height="40" Click="CloseAppButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
