<Page x:Class="JobSeekerApp.Views.ResumeUploadView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ResumeUploadView">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBox x:Name="ResumePathTextBox" Width="300" Margin="10" IsReadOnly="True"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Select a file" Click="SelectFileButton_Click" Width="120" Margin="5"/>
                <Button Content="Upload resume" Click="UploadResumeButton_Click" Width="120" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>