<UserControl x:Class="JobSeekerApp.Views.ResumeUploadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="400"
             Background="#2D2D2D">
    <!-- Темний фон -->
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Upload Your Resume" FontSize="24" Margin="0,0,0,20" Foreground="White"/>
            <!-- Білий текст -->
            <TextBox x:Name="FilePathTextBox" Width="300" Height="30" IsReadOnly="True" Background="#3D3D3D" Foreground="White"/>
            <!-- Темний фон та білий текст -->
            <Button Content="Browse" Width="100" Click="BrowseButton_Click" Background="#4C4C4C" Foreground="White" Margin="0,10,0,0"/>
            <Button Content="Upload" Width="100" Click="UploadButton_Click" Margin="0,20,0,0" Background="#4C4C4C" Foreground="White"/>
            <TextBlock x:Name="StatusTextBlock" Foreground="Lime" Margin="0,20,0,0"/>
            <!-- Зелений текст для статусу -->
        </StackPanel>
    </Grid>
</UserControl>