<Page x:Class="JobSeekerApp.Views.PersonalInfoView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PersonalInfoView">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="First Name" HorizontalAlignment="Left" Margin="10"/>
            <TextBox x:Name="FirstNameTextBox" Width="300" Margin="10" />

            <Label Content="Last Name" HorizontalAlignment="Left" Margin="10"/>
            <TextBox x:Name="LastNameTextBox" Width="300" Margin="10" />

            <Label Content="Location" HorizontalAlignment="Left" Margin="10"/>
            <TextBox x:Name="LocationTextBox" Width="300" Margin="10" />

            <Button Content="next" Width="150" Height="40" Click="NextButton_Click" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>