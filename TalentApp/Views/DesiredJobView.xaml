<Page x:Class="JobSeekerApp.Views.DesiredJobView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="DesiredJobView">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Enter Desired Job:" FontSize="16" Margin="10"/>    
            <TextBox x:Name="DesiredJobTextBox" Width="300" Margin="10" />

            <TextBlock Text="Enter Desired Salary:" FontSize="16" Margin="10"/>
            <ComboBox x:Name="DesiredSalaryComboBox" Width="300" Margin="10">
                <ComboBoxItem Content="1000$ - 2000$"/>
                <ComboBoxItem Content="2001$ - 3000$"/>
                <ComboBoxItem Content="3001$ - 4000$"/>
                <ComboBoxItem Content="4001$ - 5000$"/>
                <ComboBoxItem Content="5001$ - 6000$"/>
                <ComboBoxItem Content="6001$ - 7000$"/>
                <ComboBoxItem Content="7001$ - 8000$"/>
                <ComboBoxItem Content="8001$ - 9000$"/>
                <ComboBoxItem Content="9001$ - 10000$"/>
            </ComboBox>

            <Button Content="next" Width="150" Height="40" Click="NextButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>

